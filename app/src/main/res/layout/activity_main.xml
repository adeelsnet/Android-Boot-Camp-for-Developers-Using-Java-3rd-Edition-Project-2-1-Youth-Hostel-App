<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_header"
        android:layout_width="338dp"
        android:layout_height="67dp"
        android:layout_marginTop="108dp"
        android:gravity="center|center_horizontal"
        android:text="@string/main_header"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/hostel_pic"
        app:layout_constraintStart_toStartOf="@+id/hostel_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hostel_pic"
        android:layout_width="340dp"
        android:layout_height="245dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hostel" />

    <Button
        android:id="@+id/hostel_button"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:text="@string/btn_hostelInfo"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/hostel_pic"
        app:layout_constraintTop_toBottomOf="@+id/hostel_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>